<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.cinemaddict.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/show_details"
            app:destination="@id/details" />
    </fragment>

    <fragment
        android:id="@+id/discover"
        android:name="com.example.cinemaddict.ui.discover.DiscoverFragment"
        tools:layout="@layout/fragment_discover">

        <action
            android:id="@+id/show_details"
            app:destination="@id/details" />
    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="com.example.cinemaddict.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/details"
        android:name="com.example.cinemaddict.ui.details.DetailsFragment"
        tools:layout="@layout/fragment_details" />
</navigation>